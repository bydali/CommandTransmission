<Window x:Class="CommandTransmission.CommandTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommandTransmission"
        mc:Ignorable="d"
        Title="CommandTemplateWindow" Width="400">
	<Window.Resources>
		<HierarchicalDataTemplate DataType="{x:Type local:CmdTemplate}" ItemsSource="{Binding CmdList}">
			<Label Content="{Binding Type}"/>
		</HierarchicalDataTemplate>
		<HierarchicalDataTemplate DataType="{x:Type local:Cmd}">
			<Label Content="{Binding Name}"/>
		</HierarchicalDataTemplate>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<CheckBox Content="维护命令类型" Margin="10,0,0,0"/>
		<TreeView Grid.Row="1" ItemsSource="{Binding}"/>
	</Grid>
</Window>
