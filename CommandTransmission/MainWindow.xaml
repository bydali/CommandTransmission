<Controls:MetroWindow x:Class="CommandTransmission.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="MainWindow"
					  xmlns:prism="http://prismlibrary.com/"
					  prism:ViewModelLocator.AutoWireViewModel="True"
					  >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.3*"/>
				<ColumnDefinition />
				<ColumnDefinition Width="0.3*"/>
			</Grid.ColumnDefinitions>
			<TabControl>
				<TabItem Header="操作" Controls:ControlsHelper.HeaderFontSize="15">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="80"/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>
						<Grid>
							<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
								<StackPanel Orientation="Horizontal">
									<Rectangle Fill="Green" Width="20" Height="20"/>
									<Label Content="数据库正常" Margin="5,0,0,0"/>
									<Label Content="15:21:23" Margin="5,0,0,0"/>
								</StackPanel>
								<StackPanel Orientation="Horizontal">
									<Rectangle Fill="Green" Width="20" Height="20"/>
									<Label Content="通信正常" Margin="5,0,0,0"/>
									<Button Content="刷新" Margin="5,0,0,0"/>
									<Button Content="新建调度命令" Margin="5,0,0,0"/>
								</StackPanel>
							</StackPanel>
						</Grid>
						<StackPanel Orientation="Vertical" Grid.Row="1">
							<Grid>
								<Label Content="缓存命令" HorizontalAlignment="Center"/>
								<Button Content="^" Width="30" HorizontalAlignment="Right"/>
							</Grid>
							<DataGrid>
								<DataGrid.Columns>
									<DataGridTextColumn Header="命令号" Width="50"/>
									<DataGridTextColumn Header="命令标题"/>
									<DataGridTextColumn Header="目标站台"/>
								</DataGrid.Columns>
							</DataGrid>
						</StackPanel>
						<StackPanel Orientation="Vertical" Grid.Row="2">
							<Grid>
								<Label Content="接收命令" HorizontalAlignment="Center"/>
								<Button Content="^" Width="30" HorizontalAlignment="Right"/>
							</Grid>
							<DataGrid>
								<DataGrid.Columns>
									<DataGridTextColumn Header="命令号" Width="50"/>
									<DataGridTextColumn Header="命令标题"/>
									<DataGridTextColumn Header="目标站台"/>
								</DataGrid.Columns>
							</DataGrid>
						</StackPanel>
						<StackPanel Orientation="Vertical" Grid.Row="3">
							<Grid>
								<Label Content="发送命令" HorizontalAlignment="Center"/>
								<Button Content="^" Width="30" HorizontalAlignment="Right"/>
							</Grid>
							<DataGrid>
								<DataGrid.Columns>
									<DataGridTextColumn Header="命令号" Width="50"/>
									<DataGridTextColumn Header="命令标题"/>
									<DataGridTextColumn Header="目标站台"/>
								</DataGrid.Columns>
							</DataGrid>
						</StackPanel>
						<StackPanel Orientation="Vertical" Grid.Row="4">
							<Grid>
								<Label Content="已发命令" HorizontalAlignment="Center"/>
								<Button Content="^" Width="30" HorizontalAlignment="Right"/>
							</Grid>
							<DataGrid>
								<DataGrid.Columns>
									<DataGridTextColumn Header="命令号" Width="50"/>
									<DataGridTextColumn Header="命令标题"/>
									<DataGridTextColumn Header="目标站台"/>
								</DataGrid.Columns>
							</DataGrid>
						</StackPanel>
					</Grid>
				</TabItem>
				<TabItem Header="查询" Controls:ControlsHelper.HeaderFontSize="15">
				</TabItem>
				<TabItem Header="参数设置" Controls:ControlsHelper.HeaderFontSize="15">
				</TabItem>
			</TabControl>

			<Grid Grid.Column="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="0.2*"/>
					<RowDefinition/>
					<RowDefinition Height="0.2*"/>
				</Grid.RowDefinitions>
				<TabControl>
					<TabItem Header="调度命令" Controls:ControlsHelper.HeaderFontSize="15">
						
					</TabItem>
				</TabControl>
				<TabControl Grid.Row="1">
					<TabItem Header="详细内容" Controls:ControlsHelper.HeaderFontSize="15">
					</TabItem>
				</TabControl>
			</Grid>

			<Grid Grid.Column="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="0.3*"/>
					<RowDefinition/>
					<RowDefinition Height="0.1*"/>
				</Grid.RowDefinitions>
				<TabControl>
					<TabItem Header="常用词汇" Controls:ControlsHelper.HeaderFontSize="15">
					</TabItem>
				</TabControl>
				<TabControl Grid.Row="1">
					<TabItem Header="无线受令列表" Controls:ControlsHelper.HeaderFontSize="15">
					</TabItem>
				</TabControl>
				<TabControl Grid.Row="2">
					<TabItem Header="列控限速" Controls:ControlsHelper.HeaderFontSize="15">
					</TabItem>
				</TabControl>
			</Grid>
		</Grid>
		<StatusBar Grid.Row="1"/>
	</Grid>
</Controls:MetroWindow>
